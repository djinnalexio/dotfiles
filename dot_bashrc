# .bashrc

# Source global definitions
if [ -f /etc/bashrc ]; then
	echo # . /etc/bashrc
fi

# User specific environment
if ! [[ "$PATH" =~ "$HOME/.local/bin:" ]]
then
    PATH="$HOME/.local/bin:$PATH"
fi

export PATH

export LC_ALL=en_US.UTF-8

export EDITOR=nvim
export VISUAL=nvim

export TERM=xterm-256color

# Uncomment the following line if you don't like systemctl's auto-paging feature:
# export SYSTEMD_PAGER=

# User specific aliases and functions
if [ -d ~/.bashrc.d ]; then
	for rc in ~/.bashrc.d/*; do
		if [ -f "$rc" ]; then
			. "$rc"
		fi
	done
fi

unset rc

# enable command tab-completion for some programs
complete -cf sudo
complete -cf tldr
complete -cf man

# Use bash-completion, if available
[[ $PS1 && -f /usr/share/bash-completion/bash_completion ]] && \
    . /usr/share/bash-completion/bash_completion


# >>> conda initialize >>>
# !! Contents within this block are managed by 'conda init' !!
__conda_setup="$('/home/djinnalexio/.anaconda3/bin/conda' 'shell.bash' 'hook' 2> /dev/null)"
if [ $? -eq 0 ]; then
    eval "$__conda_setup"
else
    if [ -f "/home/djinnalexio/.anaconda3/etc/profile.d/conda.sh" ]; then
        . "/home/djinnalexio/.anaconda3/etc/profile.d/conda.sh"
    else
        export PATH="/home/djinnalexio/.anaconda3/bin:$PATH"
    fi
fi
unset __conda_setup
# <<< conda initialize <<<

# deactivate on startup
conda deactivate

# change directory without cd
shopt -s autocd
